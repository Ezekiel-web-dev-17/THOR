# MongoDB connection string
DATABASE_URL="your_mongodb_connection_string_here"
DATABASE_PASSWORD="your_database_password_here"

# NextAuth Configuration
# Get these from GitHub OAuth App settings
# Create one at: https://github.com/settings/developers
GITHUB_ID=your_github_client_id_here
GITHUB_SECRET=your_github_client_secret_here

# Generate a random secret for NextAuth
# Generate with: openssl rand -base64 48
NEXTAUTH_SECRET=your_nextauth_secret_at_least_32_chars_long

# NextAuth URL (for production, change to your domain)
NEXTAUTH_URL=http://localhost:3000

# Arcjet API Key
# Get from: https://app.arcjet.com
# Sign up and create a new site to get your API key
ARCJET_KEY=your_arcjet_api_key_here
